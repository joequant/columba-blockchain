{
  "name": "pigeon-blockchain",
  "scripts": {
    "prepare": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "distclean": "rm -rf node_modules *-lock.json ; npm run distclean --workspaces --if-present",
    "start": "./bin/flock-start.js"
  },
  "include-workspace-root": true,
  "bin": {
    "clean-unused": "./bin/clean-unused.sh"
  },
  "workspaces": [
    "src/pigeon-sdk/js",
    "src/beacon",
    "src/manager",
    "src/flocks/examples/c",
    "src/flocks/examples/js"
  ],
  "dependencies": {
    "chai": "^4.3.5"
  }
}
