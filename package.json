{
  "name": "columba-blockchain",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npm run build-flock --workspaces --if-present ; npm run doc",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "distclean": "rm -rf node_modules *-lock.json *.log docs/docs ; npm run distclean --workspaces --if-present",
    "start": "./bin/flock-start.js",
    "doc": "typedoc"
  },
  "include-workspace-root": true,
  "bin": {
    "clean-unused": "./bin/clean-unused.sh"
  },
  "workspaces": [
    "packages/columba-sdk/js",
    "packages/beacon",
    "packages/manager",
    "packages/flocks/examples/c",
    "packages/flocks/examples/js",
    "packages/flocks/js-algebra",
    "scripts"
  ],
  "devDependencies": {
    "typedoc": "^0.22.11"
  }
}
