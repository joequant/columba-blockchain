{
  "name": "columba-blockchain",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npm run build-flock --workspaces --if-present ; npm run doc",
    "test": "npm run test --workspaces --if-present ; mocha test/**/*.ts --exit --require ts-node/register",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "distclean": "rm -rf node_modules *-lock.json *.log docs/docs dist ; npm run distclean --workspaces --if-present",
    "start": "./bin/flock-start.js",
    "doc": "typedoc"
  },
  "include-workspace-root": true,
  "bin": {
    "clean-unused": "./bin/clean-unused.sh"
  },
  "workspaces": [
    "columba-sdk/js",
    "packages/beacon",
    "packages/manager",
    "flocks/examples/c",
    "flocks/examples/js",
    "flocks/js-algebra"
  ],
  "dependencies": {
    "@msgpack/msgpack": "^2.7.1",
    "columba-sdk": "file:columba-sdk",
    "json5": "^2.2.0",
    "manager": "file:packages/manager",
    "winston": "^3.5.1",
    "yargs": "^17.3.1",
    "zeromq": "^6.0.0-beta.6"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.15",
    "assert": "^2.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "mocha": "^9.2.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  }
}
